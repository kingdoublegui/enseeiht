sugar  different				is    "\!=";
sugar  egalite					is    "==";
sugar  addition			    	is    "\+";
sugar  soustraction				is    "\-";
sugar  ou						is    "\|\|";  
sugar  multiplication			is    "\*";
sugar  division		    		is    "/";
sugar  modulo					is    "%";
sugar  negation			    	is    "\!";
sugar  et						is    "&&";  
sugar  vrai				    	is    "true";
sugar  faux				    	is    "false";
sugar  si						is    "if";
sugar  sinon					is    "else";
sugar  afficher					is    "print";
sugar  tant_que			    	is    "while";
sugar  premier					is    "fst";
sugar  second					is    "snd";
