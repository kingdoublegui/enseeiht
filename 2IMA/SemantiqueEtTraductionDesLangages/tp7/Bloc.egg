Programme -> identificateur #inh Bloc #ast ;
#inh {
do
   Bloc^factory := new BlockFactoryImpl();
   Bloc^tds := new SymbolTable();
end
}
#ast {
do
   Programme^ast := Bloc^ast;
end
}

Bloc -> accolade_ouvrante #inh Instructions accolade_fermante #ast ;
